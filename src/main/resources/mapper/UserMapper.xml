<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.dreamroute.deep.mapper.UserMapper">
    <insert id="insert">
        insert into smart_user (`name`, password, version) values (#{name}, #{password}, #{version})
  </insert>
    <select id="selectById" parameterType="long" resultType="com.github.dreamroute.deep.domain.User">
        select * from smart_user where id = #{id}
    </select>
</mapper>